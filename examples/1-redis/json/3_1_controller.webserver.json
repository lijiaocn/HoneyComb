{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"webserver",
      "labels":{
         "name":"webserver"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "name":"webserver"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"webserver"
            }
         },
         "spec":{
            "containers":[
               {
                  "image":"192.168.202.240:5000/lijiao/example-1-webserver:0.1",
                  "name":"webserver",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":80,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}
